{
    "steps": [
        {
            "description": "Coding style",
            "parameters": [
                "--test format",
                "--exclude build"
            ]
        },
        {
            "description": "Cppcheck",
            "parameters": [
                "--test cppcheck",
                "--exclude build"
            ]
        },
        {
            "description": "Build",
            "parameters": [
                "--test build",
                "--option ENGINE_BUILD_COVERAGE=ON",
                "--threads 1"
            ]
        },
        {
            "description": "Unit tests",
            "parameters": [
                "--test ut"
            ]
        },
        {
            "description": "Coverage",
            "parameters": [
                "--test coverage",
                "--include source"
            ]
        },
        {
            "description": "Clang tidy",
            "parameters": [
                "--test clangtidy",
                "--exclude build"
            ]
        },
        {
            "description": "Doxygen",
            "parameters": [
                "--test docs"
            ]
        }
    ]
}
